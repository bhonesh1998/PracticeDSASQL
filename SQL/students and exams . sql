# Write your MySQL query statement below
select
s.student_id,student_name,s.sub_name as subject_name,
count(subject_name) as attended_exams
from
Examinations e right  join
( select student_id,student_name,subject_name as sub_name  from Students st join Subjects subt
) s
on e.student_id = s.student_id
and e.subject_name = s.sub_name
group by student_id,student_name,sub_name
order by student_id,student_name